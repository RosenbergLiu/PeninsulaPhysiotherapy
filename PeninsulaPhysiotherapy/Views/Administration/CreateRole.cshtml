
@model CreateRoleVM
@{

}

<h1>Create Role</h1>

<div class="row">
    <div class="col-md-4">
        <form id="createRoleForm" method="post">
            <hr />
            <div class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="RoleName" class="form-control"/>
                <label asp-for="RoleName"></label>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <br />
            <button id="createRoleSubmit" style="width:auto" type="submit" class="w-100 btn btn-lg btn-primary">Create Role</button>
            <br />
            <a asp-action="ListRoles" asp-controller="Administration">Return to roles list</a>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

