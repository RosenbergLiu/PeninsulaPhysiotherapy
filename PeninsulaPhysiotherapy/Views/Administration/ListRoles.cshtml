@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}
<h1>All Roles</h1>
@if(Model.Any()){

    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Administration">
        Create Role
    </a>


    foreach (var role in Model){
        <div class="card m-3">
            <div class="card-header">
                Role ID: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a href="#" id="rolelistEdit" class="btn btn-primary">Edit</a>
                <a href="#" id="rolelistDelete" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}else{
    <div class="card">
        <div class="card-header">
            No role created
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Click blow to create a new role
            </h5>
            <a class="btn btn-primary" style="width:auto" 
            asp-controller="Administration" 
            asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}