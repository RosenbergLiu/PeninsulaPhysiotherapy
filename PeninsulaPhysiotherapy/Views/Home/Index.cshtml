@{
    ViewData["Title"] = "Home Page";
}
<head>
    <script src="~/js/main.js"></script>
    <link href="~/css/main.css" rel="stylesheet" />
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</head>
<div class="image">

    <img src="~/lib/home.jpg"/>
    <h1>Peninsula Physiotherapy</h1>
    <h2>
        @ViewBag.commentCount people have reviewed us as average of @ViewBag.ratingAvg stars
    </h2>

</div>


<style>

    .image {
        position: relative;
        width: 100%; /* for IE 6 */
        height:100%;
        text-align:center;
    }

    h1 {
        position: absolute;
        top: 30%;
        left: 0;
        width: 100%;
        color:white;
        font-size: 80px;
        font-family:Arial, Helvetica, sans-serif;
    }

    h2{
        position: absolute;
        top: 80%;
        left: 0;
        width: 100%;
        color: white;
        font-size: 30px;
        font-family: Arial, Helvetica, sans-serif;
    }
</style>
<br />



<div class="container-lg" style="text-align:center">
    <h3>Where to find us</h3>
    <h5>We are located in every Medicare branch. Please talk to Medicare crews to access us</h5>
    <iframe
            height="500"
            style="border:0; width:70%;"
            loading="lazy"
            allowfullscreen
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.google.com/maps/embed/v1/search?key=AIzaSyCXdfLBloKI6vbPymPV1_R46ypLgboMYgE
    &q=Medicare+in+VIC&zoom=10">
    </iframe>

</div>



<div class="container-lg" style="text-align:center">
    <h3>Customer feedbacks</h3>

    <div class="container-lg" id="chartContainer" style="height:400px">
    </div>
    <script type="text/javascript">

        window.onload = function () {
            var chart = new CanvasJS.Chart("chartContainer", {
                theme: "light2",
                animationEnabled: true,
                data: [
                    {
                        type: "pie",
                        dataPoints: @Html.Raw(ViewBag.DataPoints),
                        click: function (e) {
                            if (e.dataPoint.exploded) {
                                document.getElementById("dataClick").innerHTML = e.dataPoint.y + " people have rated " + e.dataPoint.label;
                            } else {
                                document.getElementById("dataClick").innerHTML = ".";
                            }


                        },

                    }
                ]
            });
            chart.render();
        };
    </script>

    <h4 id="dataClick">.</h4>
</div>




