@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}
<div class="container">
    <h1 class="text-center display-4">Role Management</h1>
    @if (Model.Any())
    {

        <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Administration">
            Create Role
        </a>
        foreach (var role in Model)
        {
            <div class="card m-3">
                <div class="card-header">
                    Role ID: @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-footer">

                    <a id="rolelistEdit" class="btn btn-outline-primary btn-sm" asp-action="EditRole" asp-controller="Administration" asp-route-id=@role.Id>
                        Edit
                    </a>


                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No role created
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Click blow to create a new role
                </h5>
                <a class="btn btn-primary" style="width:auto"
               asp-controller="Administration"
               asp-action="CreateRole">
                    Create Role
                </a>
            </div>
        </div>
    }
    <script src="~/js/span.js"></script>
</div>
