@model EditUserVM

<div class="container">
    <h1>Edit User</h1>
    <form method="post" class="mt-3">

        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserName" class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="ListUsers" class="btn btn-danger">Back</a>
            </div>
        </div>

        <br />
        <hr />
        <br />

        <div class="card">
            <div class="card-header">
                <h3>User Roles</h3>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles)
                    {
                        <h5 class="card-title">@role</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">Guest</h5>
                }
            </div>
            <div class="card-footer">
                <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-primary">Add or Remove Roles</a>
            </div>
        </div>
        <br />
        <div class="card">
            <div class="card-header">
                <h3>User Claims</h3>
            </div>
            <div class="card-body">
                @if (Model.Claims.Any())
                {
                    foreach (var claim in Model.Claims)
                    {
                        <h5 class="card-title">@claim</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None</h5>
                }
            </div>
            <div class="card-footer">
                <a href="#" style="width:auto" class="btn btn-primary">Manage Claims</a>
            </div>
        </div>


    </form>
    <br />
    <hr />
    <br />
    <a asp-action="DeleteUser" asp-route-Id="@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete user: @Model.UserName')">Delete</a>

</div>
